<!doctype html>
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Cadastrar conta</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <%- include('../partials/header.ejs') %>

    <div class="container">
      <% if (message) { %>
        <div class="alert alert-success" role="alert">
          <%= message %>
        </div>
        <% } %>

          <h1 class="mb-3">Cadastrar conta</h1>
          <form action="/contas" method="post" class="row g-3" style="max-width:700px;">
            <div class="col-12 col-md-4">
              <label class="form-label">Banco
                <input type="text" name="banco" class="form-control" required />
              </label>
            </div>
            <div class="col-12 col-md-4">
              <label class="form-label">Agência
                <input type="text" name="agencia" class="form-control" required />
              </label>
            </div>
            <div class="col-12 col-md-4">
              <label class="form-label">Conta
                <input type="text" name="conta" class="form-control" required />
              </label>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
          </form>

          <h2 class="h4 mt-4">Contas cadastradas</h2>
          <div class="table-responsive mb-5" style="max-width:700px;">
            <table class="table table-striped align-middle">
              <thead>
                <tr>
                  <th>Banco</th>
                  <th>Agência</th>
                  <th>Conta</th>
                  <th>Criada em</th>
                </tr>
              </thead>
              <tbody>
                <% (contas || []).forEach(c=> { %>
                  <tr>
                    <td>
                      <%= c.banco %>
                    </td>
                    <td>
                      <%= c.agencia %>
                    </td>
                    <td>
                      <%= c.conta %>
                    </td>
                    <td>
                      <%= new Date(c.timestamp).toLocaleString() %>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
