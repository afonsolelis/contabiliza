<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Relat√≥rio mensal por tag</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .table-sm td, .table-sm th { padding: .35rem .5rem; }
    .sticky-col { position: sticky; left: 0; background: var(--bs-body-bg); z-index: 1; }
  </style>
  </head>
<body>
  <%- include('../partials/header.ejs') %>

  <div class="container">
    <h1 class="mb-3">Gastos por tag (mensal)</h1>

    <form method="get" action="/relatorios/tags-mensal" class="row g-3 align-items-end" style="max-width:520px;">
      <div class="col-8 col-sm-6">
        <label class="form-label">Ano
          <input type="number" name="year" class="form-control" value="<%= year %>" min="2000" max="2100" />
        </label>
      </div>
      <div class="col-4 col-sm-3">
        <button type="submit" class="btn btn-primary w-100">Aplicar</button>
      </div>
    </form>

    <div class="table-responsive mt-4 mb-5">
      <table class="table table-striped table-sm align-middle">
        <thead>
          <tr>
            <th class="sticky-col">Tag</th>
            <th>Jan</th>
            <th>Fev</th>
            <th>Mar</th>
            <th>Abr</th>
            <th>Mai</th>
            <th>Jun</th>
            <th>Jul</th>
            <th>Ago</th>
            <th>Set</th>
            <th>Out</th>
            <th>Nov</th>
            <th>Dez</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% const sumRow = {jan:0,fev:0,mar:0,abr:0,mai:0,jun:0,jul:0,ago:0,set:0,out:0,nov:0,dez:0}; %>
          <% (rows || []).forEach(r => { %>
            <% const total = Number(r.jan)+Number(r.fev)+Number(r.mar)+Number(r.abr)+Number(r.mai)+Number(r.jun)+Number(r.jul)+Number(r.ago)+Number(r.set)+Number(r.out)+Number(r.nov)+Number(r.dez); %>
            <% sumRow.jan+=Number(r.jan); sumRow.fev+=Number(r.fev); sumRow.mar+=Number(r.mar); sumRow.abr+=Number(r.abr); sumRow.mai+=Number(r.mai); sumRow.jun+=Number(r.jun); sumRow.jul+=Number(r.jul); sumRow.ago+=Number(r.ago); sumRow.set+=Number(r.set); sumRow.out+=Number(r.out); sumRow.nov+=Number(r.nov); sumRow.dez+=Number(r.dez); %>
            <tr>
              <td class="sticky-col"><%= r.tag %></td>
              <td>R$ <%= Number(r.jan).toFixed(2) %></td>
              <td>R$ <%= Number(r.fev).toFixed(2) %></td>
              <td>R$ <%= Number(r.mar).toFixed(2) %></td>
              <td>R$ <%= Number(r.abr).toFixed(2) %></td>
              <td>R$ <%= Number(r.mai).toFixed(2) %></td>
              <td>R$ <%= Number(r.jun).toFixed(2) %></td>
              <td>R$ <%= Number(r.jul).toFixed(2) %></td>
              <td>R$ <%= Number(r.ago).toFixed(2) %></td>
              <td>R$ <%= Number(r.set).toFixed(2) %></td>
              <td>R$ <%= Number(r.out).toFixed(2) %></td>
              <td>R$ <%= Number(r.nov).toFixed(2) %></td>
              <td>R$ <%= Number(r.dez).toFixed(2) %></td>
              <td class="fw-semibold">R$ <%= total.toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
        <tfoot>
          <% const totalGeral = sumRow.jan+sumRow.fev+sumRow.mar+sumRow.abr+sumRow.mai+sumRow.jun+sumRow.jul+sumRow.ago+sumRow.set+sumRow.out+sumRow.nov+sumRow.dez; %>
          <tr class="table-secondary">
            <th class="sticky-col">Total</th>
            <th>R$ <%= sumRow.jan.toFixed(2) %></th>
            <th>R$ <%= sumRow.fev.toFixed(2) %></th>
            <th>R$ <%= sumRow.mar.toFixed(2) %></th>
            <th>R$ <%= sumRow.abr.toFixed(2) %></th>
            <th>R$ <%= sumRow.mai.toFixed(2) %></th>
            <th>R$ <%= sumRow.jun.toFixed(2) %></th>
            <th>R$ <%= sumRow.jul.toFixed(2) %></th>
            <th>R$ <%= sumRow.ago.toFixed(2) %></th>
            <th>R$ <%= sumRow.set.toFixed(2) %></th>
            <th>R$ <%= sumRow.out.toFixed(2) %></th>
            <th>R$ <%= sumRow.nov.toFixed(2) %></th>
            <th>R$ <%= sumRow.dez.toFixed(2) %></th>
            <th class="fw-bold">R$ <%= totalGeral.toFixed(2) %></th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

