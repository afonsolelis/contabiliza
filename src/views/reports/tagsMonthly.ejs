<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Relat√≥rio mensal por tag</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .table-sm td, .table-sm th { padding: .35rem .5rem; }
    .sticky-col { position: sticky; left: 0; background: var(--bs-body-bg); z-index: 1; }
  </style>
  </head>
<body>
  <%- include('../partials/header.ejs') %>

  <div class="container">
    <h1 class="mb-3">Gastos por tag (mensal)</h1>

    <form method="get" action="/relatorios/tags-mensal" class="row g-3 align-items-end" style="max-width:520px;">
      <div class="col-8 col-sm-6">
        <label class="form-label">Ano
          <input type="number" name="year" class="form-control" value="<%= year %>" min="2000" max="2100" />
        </label>
      </div>
      <div class="col-4 col-sm-3">
        <button type="submit" class="btn btn-primary w-100">Aplicar</button>
      </div>
    </form>

    <div class="table-responsive mt-4 mb-5">
      <table class="table table-striped table-sm align-middle">
        <thead>
          <tr>
            <th class="sticky-col">Tag</th>
            <th>Jan</th>
            <th>Fev</th>
            <th>Mar</th>
            <th>Abr</th>
            <th>Mai</th>
            <th>Jun</th>
            <th>Jul</th>
            <th>Ago</th>
            <th>Set</th>
            <th>Out</th>
            <th>Nov</th>
            <th>Dez</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% const sumRow = {jan:0,fev:0,mar:0,abr:0,mai:0,jun:0,jul:0,ago:0,setem:0,out:0,nov:0,dez:0}; %>
          <% (rows || []).forEach(r => { %>
            <% const total = Number(r.jan)+Number(r.fev)+Number(r.mar)+Number(r.abr)+Number(r.mai)+Number(r.jun)+Number(r.jul)+Number(r.ago)+Number(r.setem)+Number(r.out)+Number(r.nov)+Number(r.dez); %>
            <% sumRow.jan+=Number(r.jan); sumRow.fev+=Number(r.fev); sumRow.mar+=Number(r.mar); sumRow.abr+=Number(r.abr); sumRow.mai+=Number(r.mai); sumRow.jun+=Number(r.jun); sumRow.jul+=Number(r.jul); sumRow.ago+=Number(r.ago); sumRow.setem+=Number(r.setem); sumRow.out+=Number(r.out); sumRow.nov+=Number(r.nov); sumRow.dez+=Number(r.dez); %>
            <tr>
              <td class="sticky-col"><%= r.tag %></td>
              <td>R$ <%= money(r.jan) %></td>
              <td>R$ <%= money(r.fev) %></td>
              <td>R$ <%= money(r.mar) %></td>
              <td>R$ <%= money(r.abr) %></td>
              <td>R$ <%= money(r.mai) %></td>
              <td>R$ <%= money(r.jun) %></td>
              <td>R$ <%= money(r.jul) %></td>
              <td>R$ <%= money(r.ago) %></td>
              <td>R$ <%= money(r.setem) %></td>
              <td>R$ <%= money(r.out) %></td>
              <td>R$ <%= money(r.nov) %></td>
              <td>R$ <%= money(r.dez) %></td>
              <td class="fw-semibold">R$ <%= money(total) %></td>
            </tr>
          <% }) %>
        </tbody>
        <tfoot>
          <% const totalGeral = sumRow.jan+sumRow.fev+sumRow.mar+sumRow.abr+sumRow.mai+sumRow.jun+sumRow.jul+sumRow.ago+sumRow.setem+sumRow.out+sumRow.nov+sumRow.dez; %>
          <tr class="table-secondary">
            <th class="sticky-col">Total</th>
            <th>R$ <%= money(sumRow.jan) %></th>
            <th>R$ <%= money(sumRow.fev) %></th>
            <th>R$ <%= money(sumRow.mar) %></th>
            <th>R$ <%= money(sumRow.abr) %></th>
            <th>R$ <%= money(sumRow.mai) %></th>
            <th>R$ <%= money(sumRow.jun) %></th>
            <th>R$ <%= money(sumRow.jul) %></th>
            <th>R$ <%= money(sumRow.ago) %></th>
            <th>R$ <%= money(sumRow.setem) %></th>
            <th>R$ <%= money(sumRow.out) %></th>
            <th>R$ <%= money(sumRow.nov) %></th>
            <th>R$ <%= money(sumRow.dez) %></th>
            <th class="fw-bold">R$ <%= money(totalGeral) %></th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
