<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Relatório mensal por tag</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .table-sm td, .table-sm th {
      padding: .25rem .4rem;
      font-size: 0.875rem;
      white-space: nowrap;
    }
    .sticky-col {
      position: sticky;
      left: 0;
      background: var(--bs-body-bg);
      z-index: 1;
      min-width: 100px;
      max-width: 150px;
    }
    .clickable-cell { cursor: pointer; color: #0d6efd; text-decoration: underline; }
    .clickable-cell:hover { color: #0a58ca; background-color: rgba(13, 110, 253, 0.1); }
    .table {
      width: 100%;
      table-layout: auto;
    }
    .table thead th {
      font-size: 0.875rem;
    }
  </style>
  </head>
<body>
  <%- include('../partials/header.ejs') %>

  <div class="container-fluid px-4">
    <h1 class="mb-3">Gastos por tag (mensal)</h1>

    <form method="get" action="/relatorios/tags-mensal" id="filterForm" class="row g-3 align-items-end" style="max-width:520px;">
      <div class="col-8 col-sm-6">
        <label class="form-label">Ano
          <input type="number" name="year" id="yearInput" class="form-control" value="<%= year %>" min="2000" max="2100" />
        </label>
      </div>
    </form>

    <div class="card mt-4 mb-4">
      <div class="card-body">
        <h5 class="card-title mb-3">Evolução mensal de gastos</h5>
        <div id="monthlyChart" style="height:300px;"></div>
      </div>
    </div>

    <div class="mt-4 mb-5">
      <table class="table table-striped table-sm align-middle">
        <thead>
          <tr>
            <th class="sticky-col">Tag</th>
            <th>Jan</th>
            <th>Fev</th>
            <th>Mar</th>
            <th>Abr</th>
            <th>Mai</th>
            <th>Jun</th>
            <th>Jul</th>
            <th>Ago</th>
            <th>Set</th>
            <th>Out</th>
            <th>Nov</th>
            <th>Dez</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% const sumRow = {jan:0,fev:0,mar:0,abr:0,mai:0,jun:0,jul:0,ago:0,setem:0,out:0,nov:0,dez:0}; %>
          <% (rows || []).forEach(r => { %>
            <% const total = Number(r.jan)+Number(r.fev)+Number(r.mar)+Number(r.abr)+Number(r.mai)+Number(r.jun)+Number(r.jul)+Number(r.ago)+Number(r.setem)+Number(r.out)+Number(r.nov)+Number(r.dez); %>
            <% sumRow.jan+=Number(r.jan); sumRow.fev+=Number(r.fev); sumRow.mar+=Number(r.mar); sumRow.abr+=Number(r.abr); sumRow.mai+=Number(r.mai); sumRow.jun+=Number(r.jun); sumRow.jul+=Number(r.jul); sumRow.ago+=Number(r.ago); sumRow.setem+=Number(r.setem); sumRow.out+=Number(r.out); sumRow.nov+=Number(r.nov); sumRow.dez+=Number(r.dez); %>
            <%
              const tagIdParam = r.tag_id === null ? 'null' : r.tag_id;
              const tagNameParam = encodeURIComponent(r.tag);
              function monthCell(monthNum, value, monthName) {
                const val = Number(value);
                if (val > 0) {
                  return `<td class="clickable-cell" onclick="window.location='/relatorios/tag-mes-detalhes?year=${year}&month=${monthNum}&tag_id=${tagIdParam}&tag_name=${tagNameParam}'">${money(val)}</td>`;
                } else {
                  return `<td>${money(val)}</td>`;
                }
              }
            %>
            <tr>
              <td class="sticky-col"><%= r.tag %></td>
              <%- monthCell(1, r.jan, 'Jan') %>
              <%- monthCell(2, r.fev, 'Fev') %>
              <%- monthCell(3, r.mar, 'Mar') %>
              <%- monthCell(4, r.abr, 'Abr') %>
              <%- monthCell(5, r.mai, 'Mai') %>
              <%- monthCell(6, r.jun, 'Jun') %>
              <%- monthCell(7, r.jul, 'Jul') %>
              <%- monthCell(8, r.ago, 'Ago') %>
              <%- monthCell(9, r.setem, 'Set') %>
              <%- monthCell(10, r.out, 'Out') %>
              <%- monthCell(11, r.nov, 'Nov') %>
              <%- monthCell(12, r.dez, 'Dez') %>
              <td class="fw-semibold"><%= money(total) %></td>
            </tr>
          <% }) %>
        </tbody>
        <tfoot>
          <% const totalGeral = sumRow.jan+sumRow.fev+sumRow.mar+sumRow.abr+sumRow.mai+sumRow.jun+sumRow.jul+sumRow.ago+sumRow.setem+sumRow.out+sumRow.nov+sumRow.dez; %>
          <tr class="table-secondary">
            <th class="sticky-col">Total</th>
            <th><%= money(sumRow.jan) %></th>
            <th><%= money(sumRow.fev) %></th>
            <th><%= money(sumRow.mar) %></th>
            <th><%= money(sumRow.abr) %></th>
            <th><%= money(sumRow.mai) %></th>
            <th><%= money(sumRow.jun) %></th>
            <th><%= money(sumRow.jul) %></th>
            <th><%= money(sumRow.ago) %></th>
            <th><%= money(sumRow.setem) %></th>
            <th><%= money(sumRow.out) %></th>
            <th><%= money(sumRow.nov) %></th>
            <th><%= money(sumRow.dez) %></th>
            <th class="fw-bold"><%= money(totalGeral) %></th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Carrega ApexCharts local (evita CDN) -->
  <script src="/vendor/apexcharts/dist/apexcharts.min.js"></script>
  <script>
    // Fallback para CDN caso o bundle local não esteja disponível
    (function ensureApexCharts(){
      if (typeof ApexCharts === 'undefined') {
        var s = document.createElement('script');
        s.src = 'https://cdn.jsdelivr.net/npm/apexcharts@5.3.6';
        document.head.appendChild(s);
      }
    })();
  </script>
  <script>
    (function () {
      const fmtCurrency = (val) => new Intl.NumberFormat('pt-BR', {
        style: 'currency',
        currency: 'BRL',
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
      }).format(Number(val) || 0);

      const fmtCurrency0 = (val) => new Intl.NumberFormat('pt-BR', {
        style: 'currency',
        currency: 'BRL',
        minimumFractionDigits: 0,
        maximumFractionDigits: 0
      }).format(Number(val) || 0);

      // Dados dos totais mensais (calculados no EJS)
      const monthlyData = [
        <%= sumRow.jan %>,
        <%= sumRow.fev %>,
        <%= sumRow.mar %>,
        <%= sumRow.abr %>,
        <%= sumRow.mai %>,
        <%= sumRow.jun %>,
        <%= sumRow.jul %>,
        <%= sumRow.ago %>,
        <%= sumRow.setem %>,
        <%= sumRow.out %>,
        <%= sumRow.nov %>,
        <%= sumRow.dez %>
      ];

      const categories = ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez'];

      function renderChart() {
        if (typeof ApexCharts === 'undefined') {
          console.warn('ApexCharts não carregado ainda. Tentando novamente...');
          return setTimeout(renderChart, 300);
        }

        const chartEl = document.querySelector('#monthlyChart');
        if (chartEl) {
          new ApexCharts(chartEl, {
            chart: {
              type: 'line',
              height: 300,
              toolbar: { show: false },
              zoom: { enabled: false }
            },
            series: [{
              name: 'Total por mês',
              data: monthlyData
            }],
            xaxis: {
              categories: categories
            },
            dataLabels: {
              enabled: false
            },
            stroke: {
              curve: 'smooth',
              width: 3
            },
            markers: {
              size: 5,
              hover: {
                size: 7
              }
            },
            tooltip: {
              y: {
                formatter: (val) => fmtCurrency(val)
              }
            },
            yaxis: {
              labels: {
                formatter: (val) => fmtCurrency0(val)
              }
            },
            colors: ['#0d6efd'],
            grid: {
              borderColor: '#e9ecef'
            }
          }).render();
        }
      }

      renderChart();
    })();
  </script>
  <script>
    // Auto-submit form quando o ano for alterado
    document.getElementById('yearInput').addEventListener('change', function() {
      document.getElementById('filterForm').submit();
    });
  </script>
</body>
</html>
