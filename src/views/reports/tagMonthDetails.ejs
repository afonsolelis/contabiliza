<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Detalhes - <%= tagName %> (<%= monthName %>/<%= year %>)</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../partials/header.ejs') %>

  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h1 class="mb-1">Detalhes dos Gastos</h1>
        <p class="text-muted mb-0">
          <strong><%= tagName %></strong> - <%= monthName %>/<%= year %>
        </p>
      </div>
      <a href="/relatorios/tags-mensal?year=<%= year %>" class="btn btn-secondary">
        &larr; Voltar
      </a>
    </div>

    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">Total do período</h5>
        <h2 class="mb-0"><%= currency(total) %></h2>
        <p class="text-muted mb-0"><%= rows.length %> <%= rows.length === 1 ? 'gasto' : 'gastos' %></p>
      </div>
    </div>

    <% if (rows.length === 0) { %>
      <div class="alert alert-info">
        Nenhum gasto encontrado para este período.
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
          <thead>
            <tr>
              <th>Data</th>
              <th>Descrição</th>
              <th>Conta</th>
              <th>Tipo</th>
              <th class="text-end">Valor</th>
              <th class="text-center">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% rows.forEach(row => { %>
              <%
                let contaNome = '—';
                if (row.banco || row.agencia || row.conta) {
                  const parts = [];
                  if (row.banco) parts.push(row.banco);
                  if (row.agencia) parts.push(`Ag ${row.agencia}`);
                  if (row.conta) parts.push(`C ${row.conta}`);
                  contaNome = parts.join(' - ');
                }
              %>
              <tr>
                <td><%= new Date(row.data_efetivacao).toLocaleDateString('pt-BR') %></td>
                <td><%= row.descricao_gasto %></td>
                <td><%= contaNome %></td>
                <td>
                  <% if (row.tipo === 'pix') { %>
                    <span class="badge bg-primary">PIX</span>
                  <% } else if (row.tipo === 'cartao') { %>
                    <span class="badge bg-info">Cartão</span>
                  <% } else if (row.tipo === 'debito') { %>
                    <span class="badge bg-warning">Débito</span>
                  <% } else { %>
                    <span class="badge bg-secondary"><%= row.tipo || '—' %></span>
                  <% } %>
                </td>
                <td class="text-end">
                  <%= currency(row.valor) %>
                </td>
                <td class="text-center">
                  <a href="/gastos/<%= row.id %>/edit" class="btn btn-sm btn-outline-primary">
                    Editar
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
          <tfoot>
            <tr class="table-secondary fw-bold">
              <td colspan="4" class="text-end">Total:</td>
              <td class="text-end"><%= currency(total) %></td>
              <td></td>
            </tr>
          </tfoot>
        </table>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
