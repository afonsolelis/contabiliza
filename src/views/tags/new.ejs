<!doctype html>
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Cadastrar tag</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <%- include('../partials/header.ejs') %>

    <div class="container">
      <% if (message) { %>
        <div class="alert alert-success" role="alert">
          <%= message %>
        </div>
        <% } %>

          <h1 class="mb-3">Cadastrar tag</h1>
          <form action="/tags" method="post" class="row g-3 align-items-end" style="max-width:600px;">
            <div class="col-12 col-sm-8">
              <label class="form-label">Nome da tag
                <input type="text" name="tag" placeholder="Nome da tag" class="form-control" required />
              </label>
            </div>
            <div class="col-12 col-sm-4">
              <button type="submit" class="btn btn-primary w-100">Salvar</button>
            </div>
          </form>

          <h2 class="h4 mt-4">Tags existentes</h2>
          <ul class="list-group mb-5" style="max-width:600px;">
            <% (tags || []).forEach(t=> { %>
              <li class="list-group-item">
                <%= t.tag %>
              </li>
              <% }) %>
          </ul>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
