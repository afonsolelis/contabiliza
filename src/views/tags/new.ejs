<!doctype html>
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Cadastrar tag</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <%- include('../partials/header.ejs') %>

    <div class="container">
      <% if (message) { %>
        <div class="alert alert-success" role="alert">
          <%= message %>
        </div>
      <% } %>
      <% if (error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>

          <h1 class="mb-3">Cadastrar tag</h1>
          <form action="/tags" method="post" class="row g-3 align-items-end" style="max-width:600px;">
            <div class="col-12 col-sm-8">
              <label class="form-label">Nome da tag
                <input type="text" name="tag" placeholder="Nome da tag" class="form-control" required />
              </label>
            </div>
            <div class="col-12 col-sm-4">
              <button type="submit" class="btn btn-primary w-100">Salvar</button>
            </div>
          </form>

          <h2 class="h4 mt-4">Tags existentes</h2>
          <ul class="list-group mb-5" style="max-width:700px;">
            <% if ((tags || []).length === 0) { %>
              <li class="list-group-item text-secondary text-center">Nenhuma tag cadastrada ainda.</li>
            <% } else { %>
              <% tags.forEach(t=> { %>
                <li class="list-group-item">
                  <div class="d-flex flex-column flex-sm-row align-items-stretch align-items-sm-center gap-2">
                    <form action="/tags/<%= t.id %>/update" method="post" class="d-flex flex-grow-1 gap-2">
                      <input type="text" name="tag" class="form-control" value="<%= t.tag %>" required />
                      <button type="submit" class="btn btn-primary btn-sm">Salvar</button>
                    </form>
                    <form action="/tags/<%= t.id %>/delete" method="post" onsubmit="return confirm('Deseja realmente remover esta tag?');">
                      <button type="submit" class="btn btn-outline-danger btn-sm">Excluir</button>
                    </form>
                  </div>
                </li>
              <% }) %>
            <% } %>
          </ul>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
