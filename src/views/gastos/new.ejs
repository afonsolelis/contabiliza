<!doctype html>
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Inserir gasto</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <%- include('../partials/header.ejs') %>

    <div class="container">
      <% if (message) { %>
        <div class="alert alert-success" role="alert">
          <%= message %>
        </div>
        <% } %>

          <h1 class="mb-3">Inserir gasto</h1>
          <form action="/gastos" method="post" class="row g-3" style="max-width:600px;">
            <div class="col-12">
              <label class="form-label">Descrição
                <input type="text" name="descricao_gasto" class="form-control" required />
              </label>
            </div>
            <div class="col-12 col-sm-6">
              <label class="form-label">Valor (ex: 123.45)
                <input type="number" name="valor" step="0.01" min="0" class="form-control" required />
              </label>
            </div>
            <div class="col-12 col-sm-6">
              <label class="form-label">Tipo
                <select name="tipo" class="form-select" required>
                  <option value="pix">PIX</option>
                  <option value="cartao">Cartão</option>
                  <option value="debito">Débito</option>
                </select>
              </label>
            </div>
            <div class="col-12 col-sm-6">
              <label class="form-label">Data de efetivação
                <input type="date" name="data_efetivacao" class="form-control"
                  value="<%= (new Date()).toISOString().slice(0,10) %>" required />
              </label>
            </div>
            <div class="col-12 col-sm-6">
              <label class="form-label">Conta (opcional)
                <select name="conta_id" class="form-select">
                  <option value="">— sem conta —</option>
                  <% (contas || []).forEach(c=> { %>
                    <option value="<%= c.id %>">
                      <%= c.banco %> - <%= c.agencia %>/<%= c.conta %>
                    </option>
                    <% }) %>
                </select>
              </label>
            </div>
            <div class="col-12 col-sm-6">
              <label class="form-label">Tag (opcional)
                <select name="tag_id" class="form-select">
                  <option value="">— sem tag —</option>
                  <% (tags || []).forEach(t=> { %>
                    <option value="<%= t.id %>">
                      <%= t.tag %>
                    </option>
                    <% }) %>
                </select>
              </label>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
          </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
