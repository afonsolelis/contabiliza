<!doctype html>
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Editar gasto</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <%- include('../partials/header.ejs') %>
  <%
    const formatLocalDateInput = (date) => {
      if (!(date instanceof Date) || Number.isNaN(date.getTime())) return '';
      const y = date.getFullYear();
      const m = String(date.getMonth() + 1).padStart(2, '0');
      const d = String(date.getDate()).padStart(2, '0');
      return `${y}-${m}-${d}`;
    };
    const gastoDateYmd = formatLocalDateInput(new Date(gasto.data_efetivacao));
  %>

    <div class="container">
      <% if (message) { %>
        <div class="alert alert-warning" role="alert">
          <%= message %>
        </div>
        <% } %>

          <h1 class="mb-3">Editar gasto</h1>
          <form action="/gastos/<%= gasto.id %>/update" method="post" class="row g-3" style="max-width:700px;">
            <div class="col-12">
              <label class="form-label">Descrição
                <input type="text" name="descricao_gasto" class="form-control" value="<%= gasto.descricao_gasto %>"
                  required />
              </label>
            </div>
            <div class="col-12 col-sm-4">
              <label class="form-label">Valor
                <input type="number" name="valor" step="0.01" min="0" class="form-control"
                  value="<%= Number(gasto.valor).toFixed(2) %>" required />
              </label>
            </div>
            <div class="col-12 col-sm-4">
              <label class="form-label">Tipo
                <select name="tipo" class="form-select" required>
                  <option value="pix" <%=gasto.tipo==='pix' ? 'selected' : '' %>>PIX</option>
                  <option value="cartao" <%=gasto.tipo==='cartao' ? 'selected' : '' %>>Cartão</option>
                  <option value="debito" <%=gasto.tipo==='debito' ? 'selected' : '' %>>Débito</option>
                </select>
              </label>
            </div>
            <div class="col-12 col-sm-4">
              <label class="form-label">Data de efetivação
                <input type="date" name="data_efetivacao" class="form-control" value="<%= gastoDateYmd %>" required />
              </label>
            </div>
            <div class="col-12 col-sm-4">
              <label class="form-label">Tag (opcional)
                <select name="tag_id" class="form-select">
                  <option value="">— sem tag —</option>
                  <% (tags || []).forEach(t=> { %>
                    <option value="<%= t.id %>" <%=gasto.tag_id===t.id ? 'selected' : '' %>><%= t.tag %>
                    </option>
                    <% }) %>
                </select>
              </label>
            </div>
            <div class="col-12 col-sm-6">
              <label class="form-label">Conta (opcional)
                <select name="conta_id" class="form-select">
                  <option value="">— sem conta —</option>
                  <% (contas || []).forEach(c=> { %>
                    <option value="<%= c.id %>" <%=gasto.conta_id===c.id ? 'selected' : '' %>><%= c.banco %> - <%=
                          c.agencia %>/<%= c.conta %>
                    </option>
                    <% }) %>
                </select>
              </label>
            </div>
            <div class="col-12 d-flex align-items-center gap-2">
              <button type="submit" class="btn btn-primary">Salvar alterações</button>
              <a href="/dashboard" class="btn btn-secondary">Cancelar</a>
              <form action="/gastos/<%= gasto.id %>/delete" method="post" class="ms-auto"
                onsubmit="return confirm('Deseja realmente excluir este gasto?');">
                <button type="submit" class="btn btn-outline-danger">Excluir</button>
              </form>
            </div>
          </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
